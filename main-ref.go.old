func initialModel() model {
	ti := textinput.New()
	ti.Placeholder = "9a - 5p"
	ti.Focus()
	ti.CharLimit = 20
	ti.Width = 30

	taskInput := textinput.New()
	taskInput.Placeholder = "Enter task description"
	taskInput.CharLimit = 200
	taskInput.Width = 50

	return model{
		step:      stepDateSelect,
		date:      time.Now(),
		timeRange: ti,
		taskName:  taskInput,
		cursor:    0,
	}
}

type projectsMsg []Project
type tasksMsg []string
type userInfoMsg struct {
	workspaceID string
	userID      string
}
type errMsg error



func (m model) Init() tea.Cmd {
	err := godotenv.Load()
	if err != nil {
		return func() tea.Msg { return errMsg(fmt.Errorf("error loading .env file")) }
	}

	apiKey := os.Getenv("CLOCKIFY_API_KEY")
	if apiKey == "" {
		return func() tea.Msg { return errMsg(fmt.Errorf("CLOCKIFY_API_KEY not set in .env")) }
	}

	return fetchUserInfo(apiKey)
}


func (m model) submitTimeEntry() tea.Cmd {
	return func() tea.Msg {
		// Parse time range
		parts := strings.Split(m.timeRange.Value(), "-")
		if len(parts) != 2 {
			return errMsg(fmt.Errorf("invalid time format"))
		}

		startTime := parseTime(strings.TrimSpace(parts[0]), m.date)
		endTime := parseTime(strings.TrimSpace(parts[1]), m.date)

		entry := TimeEntry{
			Start:       startTime.Format(time.RFC3339),
			End:         endTime.Format(time.RFC3339),
			ProjectID:   m.selectedProj.ID,
			Description: m.taskName.Value(),
		}

		jsonData, _ := json.Marshal(entry)
		client := &http.Client{}
		req, _ := http.NewRequest("POST",
			fmt.Sprintf("https://api.clockify.me/api/v1/workspaces/%s/time-entries", m.workspaceID),
			strings.NewReader(string(jsonData)))
		req.Header.Set("X-Api-Key", m.apiKey)
		req.Header.Set("Content-Type", "application/json")

		resp, err := client.Do(req)
		if err != nil {
			return errMsg(err)
		}
		defer resp.Body.Close()

		if resp.StatusCode != 201 {
			body, _ := io.ReadAll(resp.Body)
			return errMsg(fmt.Errorf("failed to create entry: %s", string(body)))
		}

		m.success = true
		m.step = stepComplete
		return tea.Quit()
	}
}



func min(a, b int) int {
	if a < b {
		return a
	}
	return b
}

func mainold() {
	p := tea.NewProgram(initialModel())
	if _, err := p.Run(); err != nil {
		fmt.Printf("Error: %v", err)
		os.Exit(1)
	}
}
